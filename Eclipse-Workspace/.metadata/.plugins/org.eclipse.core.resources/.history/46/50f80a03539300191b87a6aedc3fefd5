package cn.campsg.practical.bubble.service;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStreamReader;

import cn.campsg.practical.bubble.entity.Score;

public class Configuration {
	public final String scnf = "score.conf";
	Score sco = null;
	
	public Score getSco() {
		return sco;
	}

	public void setSco(Score sco) {
		this.sco = sco;
	}

	public Configuration() throws FileNotFoundException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(getClass().getClassLoader().getResourceAsStream(scnf)));
		Score score = new Score();
		score.setLevelScore(Integer.parseInt(br.readLine()));
		score.setStep(Integer.parseInt(br.readLine()));
		score.setIncrement(Integer.parseInt(br.readLine()));
		score.setLength(Integer.parseInt(br.readLine()));
        br.close();
    } 
}
