<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/search_weather_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/note"
            android:layout_width="60sp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:hint="城市:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_city"
            android:layout_toRightOf="@+id/note"
            android:layout_width="200sp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:hint="输入城市名查询天气"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search_w_btn"
            android:layout_width="60sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/edit_city"
            android:background="#1e90ff"
            android:gravity="center"
            android:text="查询"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/guanzhu_btn"
            android:layout_width="60sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/search_w_btn"
            android:background="#1e90ff"
            android:gravity="center"
            android:text="关注"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ShareP_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_weather_layout">

        <TextView
            android:id="@+id/city"
            android:layout_width="85sp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/weather"
            android:layout_toRightOf="@+id/city"
            android:layout_width="60sp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tem"
            android:layout_toRightOf="@+id/weather"
            android:layout_width="60sp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/search_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ShareP_layout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>